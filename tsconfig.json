{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",

    "module": "nodenext",
    "target": "esnext",
    "types": [],

    // Gerar apenas JS
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
